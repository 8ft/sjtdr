

<view class="tabs {{fixed?'fixed':''}}">
  <scroll-view id="scrollView" scroll-x="true" scroll-left="{{scrollLeft}}" scroll-with-animation="{{true}}">
    <view wx:for="{{tabs}}" bindtap="_tabClick" data-index="{{index}}" class="tab custom-class {{active===index?'active':''}}">
      <view id="tab{{index}}">{{item}}</view>
    </view>
    <view id="tabUnderline" class='tab-underline' animation="{{animationData}}"></view>
  </scroll-view>
</view>

<view wx:if="{{fixed}}" class="place-holder custom-class"></view>
